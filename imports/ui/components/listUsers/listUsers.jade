template(name="listUsers")
	if Template.subscriptionsReady
		.row
			each user
				.col.s12.m6.l4
					.card.hoverable
						.card-content
							span.card-title #{name}
							each emails
								p.truncate #{address}
							if added
								with questionsGroup
									p {{_ "numberOfQuestionsAnswered" count=nbAnswered onCount=nbQuestions}}
							else
								p {{_ "userStillNotAddedQuestionGroup"}}
							p {{_ "currentScore"}} : #{currentScore}
						if isDone
							.card-action
								a.goSeeResult.waves-effect.waves-light.btn(href="#") {{_ "seeDetails"}}
			else
				h3 {{_ "noUsers"}}
	else
		+loader