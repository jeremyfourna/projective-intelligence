template(name="listQuestions")
	if Template.subscriptionsReady
		.row
			each question
				.col.s12.m6.l4
					.card.hoverable
						.card-content
							span #{title}
							ul
								li {{_ "level"}} : #{level}
								li {{_ "displayType"}} : #{displayType}
								li {{_ "numberOfQuestions" count=choicesLength}}
						.card-action
							a.waves-effect.waves-light.btn(href="{{pathFor 'questionDetails'}}") {{_ "seeDetails"}}
			else
				.col.s12
					h3 {{_ "noQuestions"}}
				.col.s12
					a#addDefaultSetOfQuestions.waves-effect.waves-light.btn(href="#") {{_ "addDefaultSetOfQuestions"}}
		.fixed-action-btn
			a#createNewQuestion.waves-effect.waves-light.btn(href="#")
				i.material-icons.left create
				| {{_ "new"}}
	else
		+loader