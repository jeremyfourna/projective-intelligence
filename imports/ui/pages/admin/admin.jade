template(name="admin")
	.container
		if Template.subscriptionsReady
			h4 {{_ "allQuestionsGroups"}}
			.row
				each questionsGroup
					.col.s12.m6.l6
						.card.hoverable
							.card-content
								span.card-title #{title}
								p {{_ "idForSignUp"}} :
									b #{_id}
								p {{_ "company"}} : #{company}
								p {{_ "usersCount" count=usersCount}}
							.card-action
								a#connect.waves-effect.waves-light.btn(href="{{pathFor 'questionsGroupDetails'}}") {{_ "seeDetails"}}
			.fixed-action-btn
				a.waves-effect.waves-light.btn(href="{{pathFor 'newQuestionsGroup'}}")
					i.material-icons.left create
					| {{_ "new"}}
		else
			+loader