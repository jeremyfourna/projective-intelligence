template(name="newQuestionsGroup")
	.container
		.card.hoverable
			.card-content
				span.card-title {{_ "newQuestionsGroup"}}
				.input-field
					input#title.validate(type="text" required)
					label(for="title") {{_ "title"}}
				.input-field
					input#company.validate(type="text" required)
					label(for="company") {{_ "company"}}
			.card-action
				a#createNewQuestionsGroup.waves-effect.waves-light.btn {{_ "validate"}}