template(name="newQuestion")
	.container
		.card.hoverable
			.card-content
				span.card-title {{_ "newQuestion"}}
				.input-field
					label(for="title") {{_ "title"}}
					input#title.validate(type="text" required)
				.input-field
					label.active(for="level") {{_ "level"}}
					input#level.validate(type="number" step="1" min="1" value="1" required)
				.input-field
					select#displayType
						option(value="" disabled selected) {{_ "chooseAnOption"}}
						option(value="scale") {{_ "scale"}}
						option(value="yesNo") {{_ "yesNo"}}
						option(value="qcm") {{_ "qcm"}}
					label {{_ "displayType"}}
			.card-action
				a#createNewQuestion.waves-effect.waves-light.btn {{_ "validate"}}