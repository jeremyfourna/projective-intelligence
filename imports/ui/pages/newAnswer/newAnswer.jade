template(name="newAnswer")
	.container
		.card.hoverable
			.card-content
				span.card-title {{_ "newAnswer"}}
				.input-field
					label.active(for="title") {{_ "title"}}
					input#title.validate(type="text" required)
				.input-field
					label.active(for="level") {{_ "level"}}
					input#level.validate(type="number" step="1" min="1" value="1" required)
				.input-field
					label.active(for="answerLevel") {{_ "answerLevel"}}
					input#answerLevel.validate(type="number" step="1" min="1" max="4" value="1" required)
				.input-field
					select#type
						option(value="" disabled selected) {{_ "chooseAnOption"}}
						option(value="scale") {{_ "scale"}}
						option(value="yesNo") {{_ "yesNo"}}
						option(value="qcm") {{_ "qcm"}}
					label {{_ "answerType"}}
			.card-action
				a#createNewAnswer.waves-effect.waves-light.btn {{_ "validate"}}