template(name="questionsGroupDetails")
	.container
		if Template.subscriptionsReady
			.row
				.col.s12
					ul.tabs
						li.tab.col.s3
							a.active(href="#questions") {{_ "questions"}}
						li.tab.col.s3
							a(href="#users") {{_ "users"}}
						li.tab.col.s3
							a(href="#answers") {{_ "answers"}}
						li.tab.col.s3
							a(href="#configuration") {{_ "configuration"}}
				#questions.col.s12
					+listQuestions
				#users.col.s12 Test 2
				#answers.col.s12 Test 3
				#configuration.col.s12 Test 4
		else
			+loader